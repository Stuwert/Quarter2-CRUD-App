extends ../layout

block content
  +booksauthorsnav('books')
  main.allbooks
    h2 Books (#{length})
    each book in books 
      div.book
        img(src=book.image)
        div.details 
          h3
            a(href='/books/' + book.id)= book.title 
          p= book.genre
          ul.authors 
            each item, i in book.authors 
              li
                a(href='/authors/' + item.id)= item.name 
              if i !== book.authors.length - 1 
                li &
          p= book.description 
        
        
        
        
        
        
        
